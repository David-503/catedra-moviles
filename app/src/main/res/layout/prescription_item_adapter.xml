<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/controlDivision"

        >
        <TextView
            android:id="@+id/lblDrug"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Paracetamol"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/days"
            />
        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 dias"
            android:textSize="16dp"
            android:background="@drawable/rounded_container"
            android:textColor="@color/white"
            android:paddingVertical="3dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lblDrug"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/titleDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="6dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lblDrug"
            android:background="@drawable/hr" />
        <TextView
            android:id="@+id/lblDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01 de mayo del 2023"
            android:padding="10dp"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/lblParam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/param_prescription"
            android:paddingHorizontal="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/lblDose"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/lblRestDays"
            />
        <TextView
            android:id="@+id/lblRestDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5 dÃ­as"
            android:paddingHorizontal="10dp"
            android:textSize="16dp"
            android:textColor="@color/pink_soft"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/lblDose"
            app:layout_constraintLeft_toRightOf="@id/lblParam"
            app:layout_constraintRight_toLeftOf="@id/container2"
            />
        <LinearLayout
            android:id="@+id/container2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lblDose"
            app:layout_constraintLeft_toRightOf="@id/lblRestDays"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/lblRestDays"
            >
            <Button
                android:id="@+id/btnStartPrescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active_prescription"
                android:paddingVertical="5dp"
                android:textSize="12dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_margin="0dp"
                app:backgroundTint="@color/pink_soft"
                app:layout_constraintTop_toBottomOf="@id/lblDose"
                app:layout_constraintLeft_toRightOf="@id/lblRestDays"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/lblRestDays"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/container_from_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:textSize="12dp"
            />
        <TextView
            android:id="@+id/lblFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27/03/2023"
            android:textSize="12dp"
            android:paddingHorizontal="4dp"
            android:textColor="@color/pink_soft"
            app:layout_constraintTop_toTopOf="@id/lblDose"
            app:layout_constraintLeft_toRightOf="@id/lblRestDays"
            app:layout_constraintRight_toRightOf="parent"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to"
                android:textSize="12dp"
                />
            <TextView
                android:id="@+id/lblTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27/03/2023"
                android:textSize="12dp"
                android:paddingHorizontal="4dp"
                android:textColor="@color/pink_soft"
                app:layout_constraintTop_toTopOf="@id/lblDose"
                app:layout_constraintLeft_toRightOf="@id/lblRestDays"
                app:layout_constraintRight_toRightOf="parent"
                />
            </LinearLayout>
        </LinearLayout>

        <!--<ImageView
            android:id="@+id/imgPending"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="5dp"
            tools:srcCompat="@drawable/baseline_check_circle_outline_24" /> -->
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/controlDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/controlDivision"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/red_soft"
        android:background="@color/red_soft">
        <ImageView
            android:id="@+id/delete"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:srcCompat="@drawable/baseline_delete_outline_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
